  "protocol_handlers": [
    {
      "protocol": "web+skillguide",
      "url": "/handle?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-certificate",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "certificate",
          "accept": ["application/pdf", "image/*"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "permissions": [
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  "prefer_related_applications": false,
  "related_applications": [
