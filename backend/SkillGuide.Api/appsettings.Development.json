{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "SkillGuide.Api": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SkillGuideDB_Dev;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Hangfire": {
    "WorkerCount": 2,
    "DashboardEnabled": true,
    "PollingInterval": 5000
  },
  "Email": {
    "SmtpServer": "localhost",
    "SmtpPort": 25,
    "EnableSsl": false,
    "Username": "",
    "Password": "",
    "FromEmail": "dev@skillguide.com",
    "FromName": "SkillGuide Development"
  },
  "Features": {
    "EnableBackgroundJobs": true,
    "EnableEmailNotifications": false,
    "EnableDetailedLogging": true,
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "SeedDatabase": true
  },
  "Security": {
    "RequireHttps": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://localhost:5173",
      "http://localhost:5000"
    ]
  },
  "Development": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "EnableHotReload": true,
    "AutoMigrateDatabase": true,
    "UseInMemoryCache": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning",
        "Hangfire": "Information"
      }
    }
  }
}
